{
  "framework": null,
  "buildCommand": "echo 'Static site - no build required'",
  "outputDirectory": "web",
  "installCommand": "echo 'No dependencies to install'",
  "rewrites": [
    { "source": "/api/product/:id", "destination": "/api/product?id=:id" },
    { "source": "/p/(.*)", "destination": "/index.html" },
    { "source": "/category/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 10,
      "includeFiles": "server/seed/*.json"
    }
  }
}
