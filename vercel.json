{
  "version": 2,
  "framework": null,
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/admin", "destination": "/index.html" },
    { "source": "/p/(.*)", "destination": "/index.html" },
    { "source": "/category/(.*)", "destination": "/index.html" },
    { "source": "/profile", "destination": "/index.html" },
    { "source": "/cart", "destination": "/index.html" }
  ],
  "functions": {
    "server/routes/public-fastify.js": {
      "runtime": "@vercel/node",
      "maxDuration": 10,
      "includeFiles": "server/seed/*.json"
    },
    "server/routes/admin-fastify.js": {
      "runtime": "@vercel/node",
      "maxDuration": 10,
      "includeFiles": "server/seed/*.json"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
